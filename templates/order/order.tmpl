<!DOCTYPE html>
<html lang="en">
    {{template "head" .}}
<body>
    <!--Navigation -->
    {{template "navigation" .}}

	<section class="section" id="order">
		<table>
			<tr>
				<td>商品名稱</td>
				<td>描述</td>
				<td>單價</td>
				<td>數量</td>
				<td>金額</td>
			</tr>
		{{range .Menus}}
			<tr>
				<td>{{.Name}}</td>
				<td>{{.Description}}</td>
				<td>{{.Price}}</td>
				<td>
					<input id="{{.Price}}" class="updateCartItem" type="number" min="1" value="{{.Price}}" style="text-align:center;width: 50px;"/>
				</td>
			</tr>

		{{range .Orders}}
			<tr>
				<td>{{.TotalPrice}}</td>
			</tr>
		{{end}}	
		</table>
	</section>

	
	{{template "footer" .}}
</body>
</html>